<h2 class="text-center"><i class="fas fa-sign-in-alt text-secondary"></i> Entrar</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                label: "Senha"%>

    <%#= f.input :remember_me, label:"Lembrar", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar", class:"btn btn-primary btn-lg mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
